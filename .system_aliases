# Jump back n directories at a time
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'

# Jump to projects
alias workspace="cd ~/workspace"
alias jaacoo="cd ~/workspace/jaacoo"
alias hotel="cd ~/workspace/hotel-tonight/hotelstonight"
alias connectivity="cd ~/workspace/hotel-tonight/connectivity"

#Colorize ls output
alias ls="gls -F --color"

#Add ssh public key superfast
alias public-key="ssh-add ~/.ssh/id_rsa_hotel_tonight"

#Edit .vimrc
alias editvim="vim ~/.vimrc"

#Edit .bash_profile
alias editbash="vim ~/.bash_profile"
alias restartbash="source ~/.bash_profile"

#Edit .gitconfig
alias editgit="vim ~/.gitconfig"
